<p id="notice"><%= notice %></p>

<h1>Listing Location Histories</h1>

<table>
  <thead>
    <tr>
      <th>Pet</th>
      <th>Record date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_histories.each do |location_history| %>
      <tr>
        <td><%= location_history.pet %></td>
        <td><%= location_history.record_date %></td>
        <td><%= location_history.latitude %></td>
        <td><%= location_history.longitude %></td>
        <td><%= link_to 'Show', location_history %></td>
        <td><%= link_to 'Edit', edit_location_history_path(location_history) %></td>
        <td><%= link_to 'Destroy', location_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

